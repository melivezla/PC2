@model Banco.Models.CuentaBancaria

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/css/styleAdmin.css" />
    <title>Confirmar Eliminación</title>
</head>
<body>
    <div class="container">
        <h1>Confirmar Eliminación</h1>
        <p>¿Está seguro de que desea eliminar la cuenta de <strong>@Model.NombreTitular</strong>?</p>
        <form asp-action="Eliminar" method="post">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">Eliminar</button>
            <a href="@Url.Action("Index")" class="btn btn-secondary">Cancelar</a>
        </form>
    </div>
</body>
</html>
