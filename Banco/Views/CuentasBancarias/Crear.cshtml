@model Banco.Models.CuentaBancaria

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/css/styleAdmin.css" />
    <title>Crear Cuenta Bancaria</title>
</head>
<body>
    <div class="container">
        <h1>Crear Cuenta Bancaria</h1>
        <form asp-action="Crear" method="post" class="form">
            <div class="form-group">
                <label>Nombre del Titular</label>
                <input asp-for="NombreTitular" class="form-control" required />
            </div>
            <div class="form-group">
                <label>Tipo de Cuenta</label>
                <input asp-for="TipoCuenta" class="form-control" required />
            </div>
            <div class="form-group">
                <label>Saldo Inicial</label>
                <input asp-for="SaldoInicial" type="number" class="form-control" required />
            </div>
            <div class="form-group">
                <label>Email</label>
                <input asp-for="Email" class="form-control" required />
            </div>
            <button type="submit" class="btn">Crear Cuenta</button>
        </form>
        <a href="@Url.Action("Index")" class="link">Volver a la lista</a>
    </div>
</body>
</html>
